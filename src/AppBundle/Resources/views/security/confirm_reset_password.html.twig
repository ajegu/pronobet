{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .column {
            max-width: 450px;
        }

        .negative ul {
            margin: 0;
            padding: 0;
            list-style-type: none;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $('#reset_password_password')
            .popup({
                on: 'focus'
            })
        ;
        $('#reset_password_repeatPassword')
            .popup({
                on: 'focus'
            })
        ;
    </script>
{% endblock %}

{% block body %}
    <div class="ui centered grid">
        <div class="column">
            <h2 class="ui blue image header">
                <div class="content">
                    {{ 'title.reset_password'|trans }}
                </div>
            </h2>
            {{ form_start(form, {'attr': {'class': 'ui form'} }) }}
            {{ form_widget(form._token) }}
            <div class="field">
                {{ form_label(form.password) }}
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    {{ form_widget(form.password) }}
                </div>
            </div>
            <div class="field">
                {{ form_label(form.repeatPassword) }}
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    {{ form_widget(form.repeatPassword) }}
                </div>
            </div>
            <button class="ui fluid submit large blue button" type="submit">
                {{ 'button.save'|trans }}
            </button>
            {{ form_end(form) }}

            {% if error != false %}
                <div class="ui negative message">
                    <span>{{ error|trans }}</span>
                </div>
            {% endif %}

        </div>
    </div>

{% endblock %}