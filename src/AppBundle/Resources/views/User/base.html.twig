{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style type="text/css">

        .context.user {
            margin-top: 1em;
        }

        div.ui.bottom.attached.segment.pushable {
            border: none;
        }

        div.ui.top.attached.menu {
            margin-bottom: 0.5em !important;
        }

        @media only screen and (min-width: 769px) {

            div.ui.top.attached.menu {
                display: none;
            }

            div.ui.top.attached.menu {
                border: none;
            }

            div.ui.bottom.attached.segment.pushable {
                border: none;
            }
        }

    </style>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $('.context.user .ui.sidebar')
            .sidebar({
                context: $('.context.user .bottom.segment')
            })
            .sidebar('attach events', '.context.user .user .item')
        ;

        $('#appbundle_user_plainPassword')
            .popup({
                on: 'focus'
            })
        ;

    </script>
{% endblock %}

{% block body %}
    <div class="context user">
        <div class="ui top attached user menu">
            <a class="item">
                <i class="sidebar icon"></i>
                {{ 'label.menu'|trans }}
            </a>
        </div>
        <div class="ui bottom attached segment pushable">
            {% include '@App/User/user_menu_sidebar.html.twig' %}
            <div class="pusher">
                <div class="ui container grid">
                    <div class="five wide column computer only">
                        {% include '@App/User/user_menu.html.twig' %}
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet eleven wide computer column">
                        {% block user_body %}{% endblock %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}