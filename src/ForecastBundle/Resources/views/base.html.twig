{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style type="text/css">

        div.ui.bottom.attached.segment.pushable {
            border: none;
        }

        div.ui.top.attached.menu {
            margin-bottom: 0.5em !important;
        }

        @media only screen and (min-width: 769px) {

            div.ui.top.attached.menu {
                display: none;
            }

            div.ui.top.attached.menu {
                border: none;
            }

            div.ui.bottom.attached.segment.pushable {
                border: none;
            }
        }

    </style>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">

        $('.ui.rating')
            .rating('disable')
        ;

        $('.context.forecast .ui.sidebar')
            .sidebar({
                context: $('.context.forecast .bottom.segment')
            })
            .sidebar('attach events', '.context.forecast .forecast .item')
        ;

        {% block javascript_charts %}{% endblock %}

    </script>
    <script src="{{ asset('/js/sportbet-form.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="context forecast">
        <div class="ui top attached forecast menu">
            <a class="item">
                <i class="sidebar icon"></i>
                {{ 'label.menu'|trans }}
            </a>
        </div>
        <div class="ui bottom attached segment pushable">
            {% include '@Forecast/forecast_menu_sidebar.html.twig' %}
            <div class="pusher">
                <div class="ui grid" style="padding: 1em">
                    <div class="three wide column computer only">
                        {% include '@Forecast/forecast_menu.html.twig' %}
                    </div>
                    <div class="sixteen wide mobile sixteen wide tablet thirteen wide computer column" style="min-height:1000px">
                        {% block forecast_content %}{% endblock %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}