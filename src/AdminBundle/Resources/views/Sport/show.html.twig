{% extends '@Admin/base.html.twig' %}

{% block admin_content %}

    <div class="ui text container">

        <h1 class="ui header">
            <i class="trophy icon"></i>
            {{ 'title.sport_show'|trans }} {{ sport.name }}
        </h1>

        <a class="ui labeled icon button"
           href="{{ path('admin_championship_index', {id: sport.id}) }}">
            <i class="eye icon"></i>
            {{ 'button.championship'|trans }}
        </a>

        <table class="ui definition table">
            <tr>
                <td>{{ 'label.name'|trans }}</td>
                <td>{{ sport.name }}</td>
            </tr>
            <tr>
                <td><i class="image icon"></i>{{ 'label.icon'|trans }}</td>
                <td>{% if sport.icon %}
                        <img width="32px" src="{{ medias_url }}{{ sport.icon }}"/>
                    {% endif %}</td>
            </tr>
            <tr>
                <td><i class="eye icon"></i>{{ 'label.visible'|trans }}</td>
                <td>
                    {% if sport.visible == true %}
                        <i class="green big checkmark icon"></i>
                    {% else %}
                        <i class="red big remove icon"></i>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td>{{ 'label.createdAt'|trans }}</td>
                <td>{{ sport.createdAt|date('d-m-Y - H:i') }}</td>
            </tr>
            <tr>
                <td>{{ 'label.updatedAt'|trans }}</td>
                <td>{{ sport.updatedAt|date('d-m-Y - H:i') }}</td>
            </tr>
        </table>

        <div class="ui center aligned container">
            <a class="ui primary labeled icon button" href="{{ path('admin_sport_edit', {id: sport.id}) }}">
                <i class="edit icon"></i>
                {{ 'button.edit'|trans }}
            </a>
            <a class="ui red labeled icon button" href="{{ path('admin_sport_delete', {id: sport.id}) }}">
                <i class="trash icon"></i>
                {{ 'button.delete'|trans }}
            </a>
        </div>

    </div>

{% endblock %}
