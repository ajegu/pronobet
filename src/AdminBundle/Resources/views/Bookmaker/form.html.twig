            <div class="ui negative message">
                {{ form_errors(form.adLink) }}
            </div>
        {% endif %}


        <div class="field {{ form_errors(form.facebookLink) ? 'error' : '' }}">
            {{ form_label(form.facebookLink) }}
            <div class="ui left icon input">
                {{ form_widget(form.facebookLink) }}
                <i class="facebook icon"></i>
            </div>
        </div>
        {% if form_errors(form.facebookLink) %}
            <div class="ui negative message">
                {{ form_errors(form.facebookLink) }}
            </div>
        {% endif %}


        <div class="field {{ form_errors(form.twitterLink) ? 'error' : '' }}">
            {{ form_label(form.twitterLink) }}
            <div class="ui left icon input">
                {{ form_widget(form.twitterLink) }}
                <i class="twitter icon"></i>
            </div>
        </div>
        {% if form_errors(form.twitterLink) %}
            <div class="ui negative message">
                {{ form_errors(form.twitterLink) }}
