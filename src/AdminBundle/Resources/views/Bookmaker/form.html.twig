        <div class="field {{ form_errors(form.youtubeLink) ? 'error' : '' }}">
            {{ form_label(form.youtubeLink) }}
            <div class="ui left icon input">
                {{ form_widget(form.youtubeLink) }}
                <i class="youtube icon"></i>
            </div>
        </div>
        {% if form_errors(form.youtubeLink) %}
            <div class="ui negative message">
                {{ form_errors(form.youtubeLink) }}
            </div>
        {% endif %}

        <div class="field {{ form_errors(form.visible) ? 'error' : '' }}">
            <div class="inline fields">
                {{ form_label(form.visible) }}
                {{ form_widget(form.visible) }}
            </div>
        </div>
        {% if form_errors(form.visible) %}
            <div class="ui negative message">
                {{ form_errors(form.visible) }}
            </div>
        {% endif %}

        <div class="ui center aligned container">
            <a class="ui button" href="{{ app.request.headers.get('referer') }}">
                {{ 'label.cancel'|trans }}
            </a>
            {% if bookmaker is defined %}
                <button class="ui primary labeled icon button" type="submit">
                    <i class="edit icon"></i>
                    {{ 'button.edit'|trans }}
                </button>
            {% else %}
                <button class="ui primary labeled icon button" type="submit">
                    <i class="add icon"></i>
                    {{ 'button.add'|trans }}
                </button>
            {% endif %}
        </div>
    </form>
</div>